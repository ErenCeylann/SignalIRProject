@model SignalRWebUI.Dtos.AboutDto.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="AboutId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Görsel</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Açıklama</label>
                                <textarea asp-for="Description" rows="10" class="form-control" id="email"></textarea>
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Hakkımızda Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




