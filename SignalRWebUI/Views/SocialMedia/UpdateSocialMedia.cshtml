@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="SocialId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Başlık </label>
                                <input type="text" asp-for="Title" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Link </label>
                                <input type="text" asp-for="Url" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">İkon </label>
                                <input type="text" asp-for="Icon" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



