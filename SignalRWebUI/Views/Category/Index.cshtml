@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int number = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori İle ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									number++;
									<tr>
									<td>@number</td>
									<td>@item.CategoryName</td>
									<td>@item.CategoryStatus</td>
									<td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger sil">Sil</a></td>
									<td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
								}
							</tbody>
						</table>
						<a href="/Category/CreateCategory" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
	$(".sil").click(function () {
		swal("Uyarı!", "Silme İşlemi Başarılı!", "success");
		setTimeout(function () {
			window.location.href = "/Category/Index";
		}, 2000);
	});
</script>