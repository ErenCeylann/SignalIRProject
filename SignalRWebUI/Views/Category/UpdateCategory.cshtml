@model SignalRWebUI.Dtos.CategoryDto.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden"asp-for="CategoryId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Kategori Adı</label>
                                <input type="text" asp-for="CategoryName" class="form-control" id="email">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kategoriyi Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





