@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Ekleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Ad Soyad</label>
                                <input type="text" asp-for="Name" class="form-control" id="email">
                            </div>

                            <div class="form-group">
                                <label for="email">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" id="email">
                            </div>

                            <div class="form-group">
                                <label for="email">Kişi Sayısı</label>
                                <input type="text" asp-for="PersonCount" class="form-control" id="email">
                            </div>

                            <div class="form-group">
                                <label for="email">Mail</label>
                                <input type="text" asp-for="Mail" class="form-control" id="email">
                            </div>

                            <div class="form-group">
                                <label for="email">Rezervasyon Tarihi</label>
                                <input type="date" asp-for="Date" class="form-control" id="email">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Rezervasyon Ekle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





