@model CreateSliderDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Öne Çıkan Alan İşlemi</div>
                        </div>
                      
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Başlık-1</label>
                                <input type="text" asp-for="Title1" class="form-control" id="email">
                            </div>
                            
                                <div class="form-group">
                                    <label for="email">Başlık-2</label>
                                    <input type="text" asp-for="Title2" class="form-control" id="email">
                                </div>
                                
                                    <div class="form-group">
                                        <label for="email">Başlık-3</label>
                                        <input type="text" asp-for="Title3" class="form-control" id="email">
                                    </div>
                            <div class="form-group">
                                <label for="email">Açıklama-1</label>
                                <textarea asp-for="Description1" rows="10" class="form-control" id="email"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="email">Açıklama-2</label>
                                <textarea asp-for="Description2" rows="10" class="form-control" id="email"></textarea>
                            </div>
                                    <div class="form-group">
                                        <label for="email">Açıklama-3</label>
                                        <textarea asp-for="Description3" rows="10" class="form-control" id="email"></textarea>
                                    </div>

                        
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ekle</button>
                        </div>

            
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






