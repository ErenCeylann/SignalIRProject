@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="MenuTableId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Masa Adı</label>
                                <input type="text" asp-for="MenuTableName" class="form-control" id="email">
                            </div>


                            </>
                            <div class="card-action">
                                <button class="btn btn-success">Güncelle</button>
                            </div>

                        </div>
                </form>
            </div>
        </div>
    </div>
</div>








