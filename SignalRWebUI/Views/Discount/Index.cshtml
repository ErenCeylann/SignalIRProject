@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int number = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İşlemleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İşlemleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İşlemleri İle ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürüm</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    number++;
                                    <tr>
                                        <td>@number</td>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger sil">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Discount/ChangToStatusTrue/@item.DiscountId" class="btn btn-outline-warning">Aktif Yap</a></td>
                                        <td><a href="/Discount/ChangToStatusFalse/@item.DiscountId" class="btn btn-outline-dark">Pasif</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    $(".sil").click(function () {
        swal("Uyarı!", "Silme İşlemi Başarılı!", "success");
        setTimeout(function () {
            window.location.href = "/Discount/Index";
        }, 2000);
    });
</script>

