@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int number = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori İle ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Durum</th>								
									<th scope="col">Kategori Adı</th>								
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									number++;
									<tr>
										<td>@number</td>
										<td>@item.ProductName</td>
										<td>@item.ProductPrice</td>
										<td>@item.ProductStatus</td>
										<td>@item.CategoryName</td>
										<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger sil">Sil</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct" class="btn btn-outline-primary">Yeni Ürün Ekle</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
	$(".sil").click(function () {
		swal("Uyarı!", "Silme İşlemi Başarılı!", "success");
		setTimeout(function () {
			window.location.href = "/Product/Index";
		}, 1000);
	});
</script>

