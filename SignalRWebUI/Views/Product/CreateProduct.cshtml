@model SignalRWebUI.Dtos.ProductDto.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Ekleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Ürün Adı</label>
                                <input type="text" asp-for="ProductName" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Ürün Fiyatı</label>
                                <input type="number" asp-for="ProductPrice" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Ürün Görsel</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Ürün Kategorisi</label>
                                @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                            </div>
                            <div class="form-group">
                                <label for="email">Ürün Açıklama</label>
                                <textarea asp-for="ProductDescription" rows="10" class="form-control" id="email"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürün Ekle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





