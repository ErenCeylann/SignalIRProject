@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Ekleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Ad Soyad </label>
                                <input type="text" asp-for="Name" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Başlık </label>
                                <input type="text" asp-for="Title" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Gorsel </label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="email">Yorum </label>
                                <textarea  asp-for="Comment" rows="10" class="form-control" id="email"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Referans Ekle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



