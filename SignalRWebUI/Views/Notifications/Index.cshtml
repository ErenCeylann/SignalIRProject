@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int number = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirim İle ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Okundu</th>
									<th scope="col">Okunmadı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									number++;
									<tr>
										<td>@number</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a href="/Notifications/NotificationStatusChangToTrue/@item.NotificationId" class="btn btn-outline-info sil">Okundu</a></td>
										<td><a href="/Notifications/NotificationStatusChangToFalse/@item.NotificationId" class="btn btn-outline-warning sil">Okunmadı</a></td>
										<td><a href="/Notifications/DeleteNotification/@item.NotificationId" class="btn btn-outline-danger sil">Sil</a></td>
										<td><a href="/Notifications/UpdateNotification/@item.NotificationId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notifications/CreateNotification" class="btn btn-outline-primary">Yeni Bildirim Ekle</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
	$(".sil").click(function () {
		swal("Uyarı!", "Silme İşlemi Başarılı!", "success");
		setTimeout(function () {
			window.location.href = "/Notifications/Index";
		}, 2000);
	});
</script>

